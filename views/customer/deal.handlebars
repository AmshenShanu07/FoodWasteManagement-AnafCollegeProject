<!doctype html>

<html>
<head>
    <title>Food Description</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/customer/deal.css" rel="stylesheet">
</head>

<body>
<nav class="navbar navbar-default">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/customer/home">
                <span class="glyphicon glyphicon-arrow-left"></span>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="menu">
            <ul class="nav navbar-nav navbar-right">
                {{!-- <li><a href="/../support">Support</a></li>
                <li><a href="/../paymentinfo">Payment Information</a></li>
                <li><a href="/../settings">Settings</a></li> --}}
                <li><a href="order">My Order</a></li>  
                <li role="separator" class="divider"></li>
                <a href="/logout" class="btn btn-danger navbar-btn" id="btn-logout">Logout</a>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="address-box">{{name}}</h3>
            <hr/>
        </div>
        <div class="col-xs-12">
            <img id="img-box" class="img-responsive" alt="Image not found" src="/products/{{image}}" />
            <hr/>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-4">
                <p class="form-text-right">Food: </p>
            </div>
            <div class="col-xs-4">
                <p id="company-box" class="form-text-left">{{name}}</p>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-4">
                <p class="form-text-right">Restaurants: </p>
            </div>
            <div class="col-xs-4">
                <p id="offer-box" class="form-text-left">{{restaurant}}</p>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-4">
                <p class="form-text-right">Price: </p>
            </div>
            <div class="col-xs-4">
                <p id="price-box" class="form-text-left">{{pricePerUnit}}</p>
            </div>
        </div>
        <form method="post" action="/customer/order" >
            <div class="col-xs-12"> 
                <div class="col-xs-4">
                    <p class="form-text-right">Quantity:</p>
                </div>
                <input type="text" hidden value={{_id}} name="prdt" >
                <div class="col-xs-8">
                    <select class="form-control" id="quantity-box" name="qnty">{{quantity}}</select>
                </div>
            </div>

            <div class="col-xs-12">
                <button type="submit" class="btn btn-info navbar-btn" id="btn-add-to-cart">Next</button>
            </div>
        </form>

    </div>
</div>

<script src="/js/jquery-1.11.0.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/customer/deal.js"></script>
